{
  "name": "ssg-api",
  "type": "module",
  "author": "Jérôme Beau <javarome@gmail.com> (https://javarome.com)",
  "version": "1.5.1",
  "description": "Static Site Generation TypeScript API",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "node": ">=16.2.0"
  },
  "license": "MIT",
  "homepage": "https://github.com/Javarome/ssg-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Javarome/ssg-api.git"
  },
  "scripts": {
    "prebuild": "npm install",
    "build": "rm -Rf dist && tsc --project tsconfig.prod.json",
    "prepublishOnly": "npm run build && npm test",
    "test": "rm -Rf out && tsx src/test.ts",
    "test-one": "rm -Rf out && tsx src/step/DirectoryStepTest.ts",
    "test-ci": "rm -Rf out && NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand"
  },
  "dependencies": {
    "cpy": "^10.1.0",
    "detect-character-encoding": "^0.8.0",
    "glob-promise": "^6.0.5",
    "jsdom": "^22.1.0"
  },
  "devDependencies": {
    "@types/detect-character-encoding": "~0.7.0",
    "@types/jsdom": "^21.1.3",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "@babel/plugin-transform-modules-commonjs": "^7.22.15"
  },
  "keywords": [
    "ssg",
    "typescript",
    "api"
  ],
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "ssg-api",
  "type": "module",
  "author": "Jérôme Beau",
  "version": "1.4.0",
  "description": "Static Site Generation TypeScript API",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "node": ">=16.2.0"
  },
  "license": "MIT",
  "homepage": "https://github.com/Javarome/ssg-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Javarome/ssg-api.git"
  },
  "scripts": {
    "prebuild": "npm install",
    "build": "rm -Rf dist && tsc --project tsconfig.prod.json",
    "prepublishOnly": "npm run build && npm test",
    "test": "rm -Rf out && NODE_OPTIONS=--experimental-vm-modules jest",
    "test-ci": "rm -Rf out && NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "cpy": "~9.0.1",
    "detect-character-encoding": "~0.8.0",
    "glob-promise": "~5.0.0",
    "jsdom": "~20.0.2"
  },
  "devDependencies": {
    "@types/detect-character-encoding": "~0.7.0",
    "@types/jsdom": "~20.0.1",
    "@types/jest": "~29.2.2",
    "jest": "~29.3.0",
    "ts-jest": "~29.0.3",
    "typescript": "~4.8.4",
    "uuid": "~9.0.0",
    "@babel/plugin-transform-modules-commonjs": "~7.19.6"
  },
  "keywords": [
    "ssg",
    "typescript",
    "api"
  ],
  "publishConfig": {
    "access": "public"
  }
}

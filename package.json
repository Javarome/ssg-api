  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "@types/jsdom": "^21.1.7",
    "typescript": "^5.8.2",
    "tsx": "4.19.3",
    "@javarome/testscript": "^0.13.1"
  },
  "keywords": [
    "ssg",
    "typescript",
